<?xml version="1.0" encoding="UTF-8" ?>
<cache-config>
	<caching-scheme-mapping>
		<cache-mapping>
			<cache-name>org.drools.persistence.session.SessionInfo</cache-name>
			<scheme-name>drools-jpa-distributed</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>org.drools.persistence.processinstance.ProcessInstanceEventInfo
			</cache-name>
			<scheme-name>drools-jpa-distributed</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>org.drools.persistence.processinstance.ProcessInstanceInfo
			</cache-name>
			<scheme-name>drools-jpa-distributed</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>org.drools.persistence.processinstance.WorkItemInfo
			</cache-name>
			<scheme-name>drools-jpa-distributed</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>org.drools.persistence.processinstance.variabletypes.VariableInstanceInfo
			</cache-name>
			<scheme-name>drools-jpa-distributed</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>org.drools.persistence.processinstance.variabletypes.JPAPersistedVariable
			</cache-name>
			<scheme-name>drools-jpa-distributed</scheme-name>
		</cache-mapping>
		<cache-mapping>
			<cache-name>org.drools.persistence.processinstance.variabletypes.SerializablePersistedVariable
			</cache-name>
			<scheme-name>drools-jpa-distributed</scheme-name>
		</cache-mapping>
	</caching-scheme-mapping>
	<caching-schemes>
		<distributed-scheme>
			<scheme-name>drools-jpa-distributed</scheme-name>
			<service-name>JpaDistributedCache</service-name>
			<backing-map-scheme>
				<read-write-backing-map-scheme>
					<internal-cache-scheme>
						<local-scheme />
					</internal-cache-scheme>
					<cachestore-scheme>
						<class-scheme>
							<class-name>com.tangosol.coherence.jpa.JpaCacheStore</class-name>
							<init-params>								
								<init-param>
									<param-type>java.lang.String</param-type>
									<param-value>{cache-name}</param-value>
								</init-param>
								<init-param>
									<param-type>java.lang.String</param-type>
									<param-value>{cache-name}</param-value>
								</init-param>
								<init-param>
									<param-type>java.lang.String</param-type>
									<param-value>org.drools.persistence.jpa</param-value>
								</init-param>
							</init-params>
						</class-scheme>
					</cachestore-scheme>
				</read-write-backing-map-scheme>
			</backing-map-scheme>
			<autostart>true</autostart>
		</distributed-scheme>
	</caching-schemes>
</cache-config>